{
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/src",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}